<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- 导入title -->

        <include layout="@layout/layout_head" />

        <ImageView
            android:id="@+id/im_b104_back"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhui" />

        <TextView
            style="@style/title_head"
            android:text="相册" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/tv_zuijinxiangpian"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最近相片"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="#B4B4B4" />

        <TextView
            android:id="@+id/tv_xiangpianliebiao"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="相册列表"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0" />

    <LinearLayout
        android:id="@+id/ll_zjxp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.zykj.hihome.view.XListView
            android:id="@+id/lv_zjxp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xclb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="5" 
        android:visibility="gone">

        <com.zykj.hihome.view.XListView
            android:id="@+id/lv_xclb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>