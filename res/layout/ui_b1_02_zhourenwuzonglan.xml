<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- 导入title -->

        <include layout="@layout/layout_head" />

        <ImageView 
            android:id="@+id/im_b102_back"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhui"/>

        <TextView
            style="@style/title_head"
            android:text="周任务总览" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:id="@+id/tv_zijirenwu"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:textSize="16sp"
            android:text="自己的任务"/>
        <View 
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="#B4B4B4"/>
        <TextView 
            android:id="@+id/tv_jieshourenwu"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="接受的任务"/>
    </LinearLayout>
	
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="2015-8-20"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/theme_color"
        android:background="#EEE"/>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="8dp" >
        <TextView
        android:id="@+id/date"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="10/19-10-20" />

    <View
        android:id="@+id/divide"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/date"
        android:background="@color/theme_colorhuang" />

    <LinearLayout
        android:layout_toRightOf="@id/divide"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="去超市买黄瓜"
            android:textColor="@color/theme_colorhuang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_task_clock" 
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="五分钟前" />

            <ImageView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_task_fresh" 
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="每天" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/task_into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/youjiantou" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/task_into"
        android:layout_marginRight="5dp"
        android:text="未执行" />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/theme_color"/>
</LinearLayout>
