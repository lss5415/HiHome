<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >
    
    <com.zykj.hihome.view.MyCommonTitle 
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten"
        android:background="@drawable/bg_solid_theme"
        android:orientation="vertical">
        <LinearLayout 
            android:id="@+id/layout1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/ten"
	        android:gravity="center_vertical">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/friend_type1"
		        android:textColor="@color/tx_color"
		        android:textSize="@dimen/t_twenty"/>
	        <View 
		        android:layout_width="0.0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="1"/>
	        <ImageView 
	            android:id="@+id/aci_select1"
		        android:layout_width="@dimen/twenty_five"
		        android:layout_height="@dimen/twenty_five"
		        android:contentDescription="@string/app_name"
		        android:visibility="gone"
		        android:src="@drawable/select"/>
        </LinearLayout>
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/theme_color"/>
        <LinearLayout 
            android:id="@+id/layout2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/ten"
	        android:gravity="center_vertical">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/friend_type2"
		        android:textColor="@color/tx_color"
		        android:textSize="@dimen/t_twenty"/>
	        <View 
		        android:layout_width="0.0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="1"/>
	        <ImageView 
	            android:id="@+id/aci_select2"
		        android:layout_width="@dimen/twenty_five"
		        android:layout_height="@dimen/twenty_five"
		        android:contentDescription="@string/app_name"
		        android:visibility="gone"
		        android:src="@drawable/select"/>
        </LinearLayout>
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/one"
	        android:background="@color/theme_color"/>
        <LinearLayout 
            android:id="@+id/layout3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/ten"
	        android:gravity="center_vertical">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/friend_type3"
		        android:textColor="@color/tx_color"
		        android:textSize="@dimen/t_twenty"/>
	        <View 
		        android:layout_width="0.0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="1"/>
	        <ImageView 
	            android:id="@+id/aci_select3"
		        android:layout_width="@dimen/twenty_five"
		        android:layout_height="@dimen/twenty_five"
		        android:contentDescription="@string/app_name"
		        android:visibility="gone"
		        android:src="@drawable/select"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
