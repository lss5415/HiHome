<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <!-- 导入title -->

                <include layout="@layout/layout_head" />

                <ImageView
                    android:id="@+id/im_b107_back"
                    android:layout_width="33dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/fanhui" />

                <TextView
                    style="@style/title_head"
                    android:text="个人资料" />
            </RelativeLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/gerentouxiang" />
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/theme_color"
                   android:layout_gravity="center_vertical"
                   android:textSize="16sp"
                   android:text="名称"/>
               <LinearLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:orientation="vertical">
                   <EditText 
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:background="@null"
                       android:gravity="center_horizontal"
                       android:hint="请输入您的名称"/>
                   <View 
                       android:layout_width="fill_parent"
                       android:layout_height="0.3dp"
                       android:background="#D3BCA2"/>
                   <View 
                       android:layout_width="fill_parent"
                       android:layout_height="0.5dp"
                       android:background="#E0D8CE"/>
                   <View 
                       android:layout_width="fill_parent"
                       android:layout_height="0.3dp"
                       android:background="#D3BCA2"/>
               </LinearLayout>
           </LinearLayout>
           
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/theme_color"
                   android:layout_gravity="center_vertical"
                   android:textSize="16sp"
                   android:text="序列号"/>
               <LinearLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_horizontal"
                       android:textColor="@color/theme_color"
                   	   android:textSize="16sp"
                       android:text="123456789"/>
               </LinearLayout>
           </LinearLayout>
           
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/theme_color"
                   android:layout_gravity="center_vertical"
                   android:textSize="16sp"
                   android:text="性别"/>
               <RelativeLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent">
                   <LinearLayout 
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_centerInParent="true">
                   <ImageView 
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/xuanzhong"/>
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="10dp"
                   android:textSize="16sp"
                   android:text="男"/>
               <ImageView 
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_marginLeft="60dp"
                   android:src="@drawable/buxuanzhong"/>
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:textSize="16sp"
                   android:layout_marginLeft="10dp"
                   android:text="女"/>
               </LinearLayout>
               </RelativeLayout>
               
               
           </LinearLayout>
           
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/theme_color"
                   android:layout_gravity="center_vertical"
                   android:textSize="16sp"
                   android:text="年龄"/>
				<RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content">
				    
               <DatePicker
                   android:id="@+id/datePicker1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:spinnersShown="true" 
                   android:calendarViewShown="false" /> 
				</RelativeLayout>
               
            </LinearLayout>
            <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/theme_color"
                   android:layout_gravity="center_vertical"
                   android:textSize="16sp"
                   android:text="名称"/>
               <LinearLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:orientation="vertical">
                   <EditText 
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:background="@null"
                       android:gravity="center_horizontal"
                       android:hint="请输入您的签名"/>
                   <View 
                       android:layout_width="fill_parent"
                       android:layout_height="0.3dp"
                       android:background="#D3BCA2"/>
                   <View 
                       android:layout_width="fill_parent"
                       android:layout_height="0.5dp"
                       android:background="#E0D8CE"/>
                   <View 
                       android:layout_width="fill_parent"
                       android:layout_height="0.3dp"
                       android:background="#D3BCA2"/>
               </LinearLayout>
           </LinearLayout>
           
            <TextView 
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/theme_colorhuang"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:gravity="center"
                android:text="确定"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="下次可以直接使用手机号登录"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>